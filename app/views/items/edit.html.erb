

<div class="container">
<%= simple_form_for @item do |f| %>
<%= f.input :name %>
<%= f.input :description %>
<%= f.input :color %>
<%= f.input :clothes_type, collection: Item::ITEM_CATEGORIES %>
<%= f.input :size, collection: Item::SIZE_CATEGORIES %>
<%= f.input :price %>
<%= f.input :quantity %>
<%= f.input :gender, collection: %w[men women neutral] %>
<%= f.input :photo, as: :file %>
<%= f.submit %>
<% end %>

</div>


