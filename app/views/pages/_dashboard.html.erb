<div class="container my-5">
  <div class="row my-3">
    <div class="col">
      <h1 class='page-heading'>Home</h1>
      <% unless current_user.first_name.nil?  %>
        <p class='intro'>Welcome <%= current_user.first_name %>!</p>
      <% else %>
        <p class='intro'>Welcome <%= current_user.username %>!</p>
      <% end %>
    </div>
  </div>
  <hr>
  <div class="row my-3">
    <div class="col">
      <h2>Feed</h2>
      <%= link_to "Search for styles", styles_path %>
    </div>
  </div>
    <div class="row justify-content-around">
      <%= render 'pages/components/feed' %>

    </div>
  <hr>
  <div class="row my-3">
    <div class="col">
      <h2>My Styles</h2>
      <%= link_to "See My styles", my_styles_path  %>
    </div>
  </div>
  <div class="row justify-content-around">
    <%= render 'pages/components/my_styles' %>
  </div>
  <hr>
  <div class="row my-3">
    <div class="col">
      <h2>Liked Styles</h2>
      <%= link_to "See my liked styles", liked_styles_path  %>
    </div>
  </div>
  <div class="row justify-content-around my-5">
    <%= render 'pages/components/liked_styles' %>
  </div>

</div>
