<div class="container">
  <h1 class="mb-3"><%= @category.capitalize %></h1>
  <div class="row">

    <% @items.each do |item| %>
        <div class="card mb-3">
          <%= link_to "/#{item.gender}/#{item.clothes_type}/#{item.id}" do %>
            <% if item.photos.attached? %>
              <%= cl_image_tag(item.photos[0].key, alt: item.name, class:'avatar') %>
              <p><%= item.name %></p>
            <% else %>
              <p><%= item.name%></p>
            <% end %>
        <% end %>
      </div>
    <% end %>
</div>


  </div>


