
<div class="container w-50 my-5">

<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                as: :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: 'border-black' }, label_html: {class: 'new-label'} %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: 'border-black' }, label_html: {class: 'new-label'} %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Login", class:"button"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
