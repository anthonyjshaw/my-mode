<% content_for :meta_title, "my mode | Edit blog" %>


<div class="container">
<%= simple_form_for @blog do |f| %>
<%= f.input :title %>
<%= f.input :blurb, label: "Add a 200 character description for the blurb", input_html: { maxlength: 200 } %>
<%= f.input :content, input_html: { class: 'tinymce'} %>
<%= f.input :photo %>
<%= f.submit %>
<% end %>

</div>


