<% content_for :meta_title, "my mode | #{@blog.title}" %>

<div class="style-banner-blog"
   style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)),
   url(<%= @blog.photo.attached? ? cl_image_path(@blog.photo.key) : asset_path('cover.png') %>)
   "
   >
   <div class="container">

   </div>
</div>
<div class="container my-4">
  <div class="row">
    <div class="col-sm-8">
      <article>
        <h1 class='article-h1'><%= @blog.title %></h1>
        <div>
          <div style="display:flex;align-items:center;">
          <% if @blog.user.photo.attached? %>
            <%= cl_image_tag @blog.user.photo.key, class: 'avatar' %>
          <% else %>
            <%= image_tag "logo-circle-black.png", class: 'avatar' %>
          <% end %>
          <p style="margin-top: 0px;margin-bottom:0px;margin-left:8px;"><%= @blog.user.full_name %> | Updated: <%= @blog.updated_at.strftime("%d/%m/%Y") %></p>
          </div>
          <% if @current_user == @blog.user %>
          <p style="margin-top:1rem;">
            <%= link_to edit_blog_path(@blog) do %>
              Edit blog     
            <% end %>
          |
            <%= link_to blog_path(@blog), method: :delete do %>
               Delete blog
            <% end %>    
          </p>
          <% end %>
        </div>
        <hr>
        <section>
          <%= sanitize @blog.content %>     
        </section>
      </article>
    </div>
  </div>
</div>
